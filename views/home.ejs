<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Homepage</title>
</head>

<body>
  <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog=> { %>
          <div class="col mt-3">
            <div class="card col" style="width: 18rem;height: 18rem;" >
              <img src="<%=blog.coverImageURL%>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%=blog.title %>
                </h5>
                <a href="/blog/<%=blog._id%>" class="btn btn-primary">Read More</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>